# Esta fase se usa para compilar el proyecto de servicio
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["LTSMerchWebApp/LTSMerchWebApp.csproj", "LTSMerchWebApp/"]
RUN dotnet restore "./LTSMerchWebApp/LTSMerchWebApp.csproj"
COPY . .
WORKDIR "/src/LTSMerchWebApp"
RUN dotnet build "./LTSMerchWebApp.csproj" -c $BUILD_CONFIGURATION -o /app/build

# Esta fase se usa para publicar el proyecto de servicio que se copiar치 en la fase final.
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./LTSMerchWebApp.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# Esta fase se usa en producci칩n o cuando se ejecuta desde VS en modo normal (valor predeterminado cuando no se usa la configuraci칩n de depuraci칩n)
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "LTSMerchWebApp.dll"]