@model LTSMerchWebApp.Models.OrderDetail

<div class="sidepanel-form">
    <div class="sidepanel-form-group">
        <dl class="sidepanel-details">
            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Order)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Order.OrderId)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.ProductOption)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.ProductOption.ProductOptionId)
            </dd>
        </dl>

        <div class="sidepanel-button-container">
            <a asp-action="Edit" asp-route-id="@Model?.OrderDetailId" class="sidepanel-link">Editar</a> |
            <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
        </div>
    </div>
</div>
