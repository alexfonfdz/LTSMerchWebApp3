@model LTSMerchWebApp.Models.OrderDetail

<div class="sidepanel-form">
    <h3>¿Estás seguro de que deseas eliminar este detalle de pedido?</h3>

    <div class="sidepanel-form-group">
        <dl class="sidepanel-details">
            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Order)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Order.OrderId)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.ProductOption)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.ProductOption.ProductOptionId)
            </dd>
        </dl>

        <form asp-action="Delete" class="sidepanel-form-group">
            <input type="hidden" asp-for="OrderDetailId" />
            <div class="sidepanel-button-container">
                <input type="submit" value="Eliminar" class="sidepanel-submit-button sidepanel-danger-button" /> |
                <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>
