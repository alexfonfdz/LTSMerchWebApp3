@model LTSMerchWebApp.Models.OrderDetail

<div class="sidepanel-form">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="sidepanel-validation-summary"></div>

        <input type="hidden" asp-for="OrderDetailId" />

        <div class="sidepanel-form-group">
            <label asp-for="OrderId" class="sidepanel-form-label"></label>
            <select asp-for="OrderId" class="sidepanel-form-control" asp-items="ViewBag.OrderId"></select>
            <span asp-validation-for="OrderId" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="ProductOptionId" class="sidepanel-form-label"></label>
            <select asp-for="ProductOptionId" class="sidepanel-form-control" asp-items="ViewBag.ProductOptionId"></select>
            <span asp-validation-for="ProductOptionId" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="Quantity" class="sidepanel-form-label"></label>
            <input asp-for="Quantity" class="sidepanel-form-control" />
            <span asp-validation-for="Quantity" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="Price" class="sidepanel-form-label"></label>
            <input asp-for="Price" class="sidepanel-form-control" />
            <span asp-validation-for="Price" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-button-container">
            <input type="submit" value="Guardar" class="sidepanel-submit-button" />
        </div>
    </form>

    <div class="sidepanel-button-container">
        <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
