@{
    ViewData["Title"] = "Dashboard";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<link rel="stylesheet" href="~/css/StylesTables.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container-fluid mt-4">
    <h1 class="mb-4">DASHBOARD</h1>

    <!-- Cards Section -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-dark text-white">
                <div class="card-body">
                    <i class="bi bi-box fs-1"></i>
                    <h5>Total de pedidos</h5>
                    <h3>@ViewBag.TotalPedidos</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-dark text-white">
                <div class="card-body">
                    <i class="bi bi-people fs-1"></i>
                    <h5>Total de clientes</h5>
                    <h3>@ViewBag.TotalClientes</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-dark text-white">
                <div class="card-body">
                    <i class="bi bi-grid fs-1"></i>
                    <h5>Total de categorías</h5>
                    <h3>@ViewBag.TotalCategorias</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-dark text-white">
                <div class="card-body">
                    <i class="bi bi-box-seam fs-1"></i>
                    <h5>Total de productos</h5>
                    <h3>@ViewBag.TotalProductos</h3>
                </div>
            </div>
        </div>
    </div>
</div>

