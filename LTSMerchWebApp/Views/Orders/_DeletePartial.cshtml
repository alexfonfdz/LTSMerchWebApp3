@model LTSMerchWebApp.Models.Order

<div class="sidepanel-form">
    <h3>¿Estás seguro de que deseas eliminar esta orden?</h3>

    <div class="sidepanel-form-group">
        <dl class="sidepanel-details">
            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Total)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.ShippingAddress)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.StatusType)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.StatusType.StatusTypeId)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.User.UserId)
            </dd>
        </dl>

        <form asp-action="Delete" class="sidepanel-form-group">
            <input type="hidden" asp-for="OrderId" />
            <div class="sidepanel-button-container">
                <input type="submit" value="Eliminar" class="sidepanel-submit-button sidepanel-danger-button" /> |
                <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>
