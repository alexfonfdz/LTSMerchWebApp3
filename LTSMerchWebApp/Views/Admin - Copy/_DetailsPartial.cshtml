@model LTSMerchWebApp.Models.Order

@{
    var statusList = new List<SelectListItem>
    {
        new SelectListItem { Text = "Pagado", Value = "1" },
        new SelectListItem { Text = "Enviado", Value = "2" },
        new SelectListItem { Text = "Entregado", Value = "3" },
    };
}

<div class="sidepanel-form">
    <div class="sidepanel-form-group">
        <dl class="sidepanel-details">
            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Total)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.ShippingAddress)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt class="sidepanel-details-label">
                Comprobante de Pago
            </dt>
            <dd class="sidepanel-details-value">
                @if (Model.Payments != null && Model.Payments.Any())
                {
                    var payment = Model.Payments.FirstOrDefault();
                    if (payment != null && !string.IsNullOrEmpty(payment.VoucherPath))
                    {
                        <a href="@payment.VoucherPath" target="_blank">Ver Comprobante</a>
                    }
                    else
                    {
                        <span>No disponible</span>
                    }
                }
                else
                {
                    <span>No disponible</span>
                }
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.User.UserId)
            </dd>
        </dl>

        <div class="sidepanel-button-container">
            <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
        </div>
    </div>
</div>
