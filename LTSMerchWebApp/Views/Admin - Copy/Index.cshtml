@{
    ViewData["Title"] = "AdminDashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebarAdmin p-3">
            <div class="text-center profileAdmin">
                <img src="~/img/userAdmin.png" alt="Profile Icon" class="img-fluid rounded-circle mb-3" width="100">
                <p class="text-white">Administrador</p>
            </div>
            <ul class="nav flex-column menuAdmin">
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Dashboard", "Admin")" target="contentFrame">
                        <i class="bi bi-house-door-fill me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Products")" target="contentFrame">
                        <i class="bi bi-box-fill me-2"></i>Productos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Sizes")" target="contentFrame">
                        <i class="bi bi-rulers me-2"></i>Tallas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Orders")" target="contentFrame">
                        <i class="bi bi-boxes me-2"></i>Pedidos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Users")" target="contentFrame">
                        <i class="bi bi-people-fill me-2"></i>Usuarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "ProductCategories")" target="contentFrame">
                        <i class="bi bi-grid-1x2-fill me-2"></i>Categorías
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Colors")" target="contentFrame">
                        <i class="bi bi-grid-1x2-fill me-2"></i>Colores
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Logout", "Home")">
                        <i class="bi bi-box-arrow-right me-2"></i>Salir
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4 mainContentAdmin">
            <iframe name="contentFrame" style="width: 100%; height: 100vh; border: none;"></iframe>
        </main>
    </div>
</div>
