@model LTSMerchWebApp.Models.User

<div class="sidepanel-form">
    <h3>crear Usuario</h3>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="sidepanel-validation-summary"></div>

        <div class="sidepanel-form-group">
            <label asp-for="Name" class="sidepanel-form-label"></label>
            <input asp-for="Name" class="sidepanel-form-control" />
            <span asp-validation-for="Name" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="Email" class="sidepanel-form-label"></label>
            <input asp-for="Email" class="sidepanel-form-control" />
            <span asp-validation-for="Email" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="PasswordHash" class="sidepanel-form-label"></label>
            <input asp-for="PasswordHash" class="sidepanel-form-control" />
            <span asp-validation-for="PasswordHash" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="PhoneNumber" class="sidepanel-form-label"></label>
            <input asp-for="PhoneNumber" class="sidepanel-form-control" />
            <span asp-validation-for="PhoneNumber" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="Address" class="sidepanel-form-label"></label>
            <input asp-for="Address" class="sidepanel-form-control" />
            <span asp-validation-for="Address" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="RoleTypeId" class="sidepanel-form-label"></label>
            <select asp-for="RoleTypeId" class="sidepanel-form-control" asp-items="ViewBag.RoleTypeId"></select>
        </div>

        <div class="sidepanel-button-container">
            <input type="submit" value="Crear" class="sidepanel-submit-button" />
        </div>
    </form>

    <div class="sidepanel-button-container">
        <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
