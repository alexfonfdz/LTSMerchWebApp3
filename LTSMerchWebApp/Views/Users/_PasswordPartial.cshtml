@model LTSMerchWebApp.Models.User

<div class="sidepanel-form">
    <h2 class="sidepanel-title">Cambiar Contraseña</h2>
    <span class="sidepanel-close-button" onclick="closeSidebar()">X</span>

    <!-- Success or error messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="ChangePassword" method="post" id="changePasswordForm">
        <div class="sidepanel-form-group">
            <label for="current-password" class="sidepanel-form-label">Contraseña actual</label>
            <input type="password" id="current-password" name="currentPassword" placeholder="Ingresar contraseña actual" class="sidepanel-form-control" required />
        </div>

        <div class="sidepanel-form-group">
            <label for="new-password" class="sidepanel-form-label">Nueva contraseña</label>
            <input type="password" id="new-password" name="newPassword" placeholder="Ingresar nueva contraseña" class="sidepanel-form-control" required />
        </div>

        <div class="sidepanel-form-group">
            <label for="confirm-password" class="sidepanel-form-label">Confirmar contraseña</label>
            <input type="password" id="confirm-password" name="confirmPassword" placeholder="Repetir contraseña nueva" class="sidepanel-form-control" required />
        </div>

        <div class="sidepanel-button-container">
            <button type="submit" class="sidepanel-submit-button">Actualizar Contraseña</button>
        </div>
    </form>
</div>
