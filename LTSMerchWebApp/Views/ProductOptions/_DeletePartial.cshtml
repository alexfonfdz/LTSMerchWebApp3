@model LTSMerchWebApp.Models.ProductOption

<div class="sidepanel-form">
    <h3>¿Estás seguro de que deseas eliminar esta opción de producto?</h3>

    <div class="sidepanel-form-group">
        <dl class="sidepanel-details">
            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Stock)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Color.ColorId)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Product.ProductId)
            </dd>

            <dt class="sidepanel-details-label">
                @Html.DisplayNameFor(model => model.Size)
            </dt>
            <dd class="sidepanel-details-value">
                @Html.DisplayFor(model => model.Size.SizeId)
            </dd>
        </dl>

        <form asp-action="Delete" class="sidepanel-form-group">
            <input type="hidden" asp-for="ProductOptionId" />
            <div class="sidepanel-button-container">
                <input type="submit" value="Eliminar" class="sidepanel-submit-button sidepanel-danger-button" /> |
                <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>
