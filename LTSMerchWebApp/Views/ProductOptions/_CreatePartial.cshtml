@model LTSMerchWebApp.Models.ProductOption

<div class="sidepanel-form">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="sidepanel-validation-summary"></div>

        <div class="sidepanel-form-group">
            <label asp-for="ProductId" class="sidepanel-form-label"></label>
            <select asp-for="ProductId" class="sidepanel-form-control" asp-items="ViewBag.ProductId"></select>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="SizeId" class="sidepanel-form-label"></label>
            <select asp-for="SizeId" class="sidepanel-form-control" asp-items="ViewBag.SizeId"></select>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="ColorId" class="sidepanel-form-label"></label>
            <select asp-for="ColorId" class="sidepanel-form-control" asp-items="ViewBag.ColorId"></select>
        </div>

        <div class="sidepanel-form-group">
            <label asp-for="Stock" class="sidepanel-form-label"></label>
            <input asp-for="Stock" class="sidepanel-form-control" />
            <span asp-validation-for="Stock" class="sidepanel-validation-error"></span>
        </div>

        <div class="sidepanel-button-container">
            <input type="submit" value="Crear" class="sidepanel-submit-button" />
        </div>
    </form>

    <div class="sidepanel-button-container">
        <a asp-action="Index" class="sidepanel-link">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
